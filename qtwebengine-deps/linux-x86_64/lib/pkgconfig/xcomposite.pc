# Call pkg-config with --define-variable=qtwebengine_deps_dir=<path_to_dir> to set the prefix.
prefix=${qtwebengine_deps_dir}
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: Xcomposite
Description: X Composite Extension Library
Version: 0.4.4
Requires: xproto compositeproto >= 0.4
Requires.private: x11 xfixes
Cflags: -I${includedir}
Libs: -L${libdir} -lXcomposite
